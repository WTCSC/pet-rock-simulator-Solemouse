print("Welcome to the pet tungsten cube You will take care of this tungsten cube and make sure it stays alive and happy")

health = 10

happy = 10

hunger = 10

while health > 0:
    action = (input("What would you like to do?\n1. Feed the cube \n2. Play with the cube \n3. Nothing \n4. Leave\n"))
    
    if action == "1":
        print("You decide to feed the cube")
        hunger += 1
        health += 1
        print (f"The cube's condition - Health: {health} Happiness: {happy} Hunger: {hunger}")
    
    elif action == "2":
        print("You decide to play with the cube")
        happy += 3
        hunger -= 3
        print (f"The cube's condition - Health: {health} Happiness: {happy} Hunger: {hunger}")
    
    elif action == "3":
        print("You don't do anything with the cube :(")
        happy -= 5 
        hunger -= 3
        print (f"The cube's condition - Health: {health} Happiness: {happy} Hunger: {hunger}") 
    
    elif action == "4":
        print("You monster, you abandon your cube")
        quit()
    
    if health == 0:
        print("Your pet cube died, you are a terrible owner :(")
        quit()
    
    if hunger < 0:
        hunger = 0
        print("Your cube starved to death :(")

    if hunger == 0:
        health -= 5
        print("Your cube starved to death :(")

    
    
    if happy < 0:
        hunger = 0
        print("Your cube died of sadness :(")
        
    if happy == 0:
        health -= 5
        print("Your cube died of sadness :(")


